<header class="bg-dark">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand fs-3 fs-lg-1" href="#">
                <i class="bi bi-images me-1"></i>
                PIX
            </a>
            <button
                class="navbar-toggler"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#navbarNav"
                aria-controls="navbarNav"
                aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <% if (session.userId) { %>
                        <li class="nav-item">
                            <span class="nav-link fs-3 fs-lg-1 text-white"><%= session.userName %></span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fs-3 fs-lg-1" href="/logout">Logout</a>
                        </li>
                    <% } else { %>
                        <li class="nav-item">
                            <a class="nav-link fs-3 fs-lg-1" href="/login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fs-3 fs-lg-1" href="/register">Register</a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>
</header>
